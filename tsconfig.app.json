{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      // "@/*": ["./src/*"]
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global","vite/client"],
    "baseUrl": "./", // 解析非相对模块的基地址，默认是当前目录
  },
}
